@model SV21T1020777.Web.Models.ShippingModel
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <form id="FrmShipping" action="~/Order/SaveShipping/@Model.OrderID" method="post">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chuyển giao hàng cho đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Người giao hàng:</label>
                    <select class="form-control" name="shipperID" id="shipperID">
                        <option value="0">-- Chọn người giao hàng --</option>
                        @foreach (var item in Model.Shippers)
                        {
                            <option value="@item.ShipperID">@item.ShipperName</option>
                        }
                    </select>
                    <p id="shipperError" class="text-danger" style="display:none;">Vui lòng chọn người giao hàng.</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.querySelector("#FrmShipping").addEventListener("submit", function (e) {
        var shipperID = document.querySelector("#shipperID").value;
        var errorSpan = document.querySelector("#shipperError");

        if (shipperID === "0") { 
            e.preventDefault(); 
            errorSpan.style.display = "block"; 
        } else {
            errorSpan.style.display = "none"; 
        }
    });
</script>